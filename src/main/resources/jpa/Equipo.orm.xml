<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
			     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			     xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm 
			     				     http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
			     version="1.0">

    <entity class="es.sesporti.asistencia.Equipo" access="FIELD">
        <table name="EQUIPOS"/>
        <attributes>
            <id name="id">
<!--                 <generated-value strategy="IDENTITY"/> -->
            </id>
            
            <basic name="nombre" optional="false">
                <column length="50"/>
            </basic>

            <basic name="categoria" optional="false">
                <column length="50"/>
            </basic>
            
            <one-to-many name="jugadores" target-entity="es.sesporti.asistencia.Jugador" mapped-by="equipo"/>
            <one-to-many name="entrenadores" target-entity="es.sesporti.asistencia.Entrenador" mapped-by="equipo"/>
        </attributes>
    </entity>
</entity-mappings>